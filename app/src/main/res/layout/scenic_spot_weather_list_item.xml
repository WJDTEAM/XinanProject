<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hugehxxxxxxxxxdp">
        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/scenic_spot_bg_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hugehxxxxxxxxxdp"
            android:src="@drawable/travelslider01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/smallhdp"
            android:layout_marginBottom="@dimen/smallhdp"
            android:layout_marginLeft="@dimen/bigxmdp"
            android:layout_marginRight="@dimen/bigxmdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/radio_moretrangreen_bg_shap"
                >
                <ImageView
                    android:id="@+id/scenic_spot_weather_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mediummdp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/weather01"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:background="@drawable/radio_trangreen_bg_shap"
                android:paddingTop="@dimen/bigmdp"
                android:paddingBottom="@dimen/bigmdp"
                >
                <TextView
                    android:id="@+id/scenic_spot_temperature_txt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="30℃"
                    android:textColor="@color/white"
                    android:textSize="@dimen/hugesp"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/tinyxhdp">
                    <TextView
                        android:id="@+id/scenic_spot_weather_txt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mediumxsp"
                        android:text="晴"
                        />
                    <TextView
                        android:id="@+id/scenic_spot_aqi_txt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/smallsp"
                        android:text="空气质量 80"
                        />
                    <TextView
                        android:id="@+id/scenic_spot_aqi_level_txt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tinysp"
                        android:text="良"
                        />
                    <TextView
                        android:id="@+id/scenic_spot_updata_time_txt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tinysp"
                        android:text="更新于5月14日"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
   <TextView
       android:id="@+id/scenic_spot_name_txt"
       android:layout_width="match_parent"
       android:layout_height="@dimen/tinyhdp"
       android:background="@color/white"
       android:gravity="center"
       android:textColor="@color/black"
       android:textSize="@dimen/smallsp"
       android:text="龙潭大峡谷"
       />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light"/>


</LinearLayout>
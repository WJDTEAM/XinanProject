<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:padding="@dimen/mediummdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/mediumxsp"
                android:gravity="bottom|right"
                android:textColor="@color/red"/>

            <View
                android:id="@+id/event_color_view"
                android:layout_width="@dimen/mediummdp"
                android:layout_height="@dimen/mediummdp"
                android:layout_marginRight="@dimen/tinymdp"
                android:layout_marginTop="@dimen/mediummdp"
                android:layout_marginBottom="2dp"
                />

            <TextView
                android:id="@+id/event_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/tinysp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="bottom|left"
                android:text="（起）"
                android:textColor="@color/red"/>
        </LinearLayout>

        <TextView
            android:id="@+id/event_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/smallsp"
            android:gravity="center"
            android:text="道路破损（事件）"
            android:textColor="@color/font_black_2"/>

</LinearLayout>
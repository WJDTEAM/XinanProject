<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/whitesmoke"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/hight_event_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mediumhdp"
        android:layout_marginBottom="@dimen/tinymdp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="@dimen/smallmdp"
        >


        <tqm.bianfeng.com.xinanproject.CustomView.CircleView
            android:id="@+id/num_txt"
            android:layout_width="@dimen/tinyhdp"
            android:layout_height="@dimen/tinyhdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/smallmdp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/mediumxsp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/tinymdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hight_event_time_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/smallsp"
                    android:text="2015-4-23 10:33"
                    android:textColor="@color/font_black_2"

                    />
                <TextView
                    android:id="@+id/hight_event_type_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/smallsp"
                    android:text="事件  巡查上报"
                    android:textColor="@color/font_black_2"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/hight_event_add_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/smallsp"
                android:text="地址：轸洛河新安眼科对面（正南）"
                android:textColor="@color/font_black_2"

                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

</LinearLayout>
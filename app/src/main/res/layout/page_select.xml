<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/smallhdp"
              android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/previous_page_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="上一页"
            android:textSize="@dimen/mediumsp"
            android:textColor="@color/font_black_2"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            />

    <TextView
        android:id="@+id/page_num_txt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/mediumsp"
        android:textColor="@color/font_black_2"
        />

    <TextView
            android:id="@+id/next_page_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下一页"
            android:textSize="@dimen/mediumsp"
            android:textColor="@color/font_black_2"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            />

    <AutoCompleteTextView
        android:id="@+id/select_page"
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:cursorVisible="false"
        android:textSize="@dimen/smallsp"
        android:gravity="center"
        android:hint="选择跳转"
        android:textColorHint="@color/font_black_2"
        android:digits=""
        android:background="@drawable/radio_writesmoke_bg_shap"
        android:layout_margin="@dimen/smallmdp"
        android:dropDownHeight="@dimen/hugehxxxxxxxxxdp"
        android:focusableInTouchMode="false"
        />



    <TextView
        android:id="@+id/all_page_num_txt"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="共13页"
        android:textSize="@dimen/smallsp"
        android:textColor="@color/font_black_2"
        />

</LinearLayout>